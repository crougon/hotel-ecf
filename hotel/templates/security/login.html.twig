{% extends 'base.html.twig' %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">Utilisateur inconnu</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <br>
    <div class="container" >

    <h2>Merci de saisir vos identifiants</h2>
    <br>
    <label for="inputUsername">Utilisateur</label>
    <input type="text" value="{{ last_username }}" placeholder="Utilisateur" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
    <br>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <br>
    <h2></h2>
    <a href="{{ path('reg')}}" class="register">Créer une compte</a>
    <br>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <br>
    <button class="btn btn-lg btn-primary" type="submit">
        Login
    </button>
</form>
</div>
{% endblock %}
