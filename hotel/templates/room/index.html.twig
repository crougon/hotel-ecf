{% extends 'base.html.twig' %}



{% block body %}

<br>
<div class="container" >
    
    <h2> Room Edit </h2>
    <br>
    <table class="table table-striped" >
        <thead>
            <tr>
                <td>Name</td>    
                <td>Description</td>

            </tr>
            </thead> 
            <tbody>
                {% for room in rooms %}
                    <tr>
                        <td> {{room.name}} </td>
                        <td> {{room.description}} </td>

                    </tr>
                {% endfor %}
            </tbody>

    </table>
</div>
{% endblock %}
